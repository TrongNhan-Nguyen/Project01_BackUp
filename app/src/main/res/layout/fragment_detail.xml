<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_Post_Detail">
    <RelativeLayout
        android:id="@+id/fDetail_layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/fDetail_imgPost"
            android:background="#AAECEC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/fDetail_tvPubDate"
            android:text="28/03/2020"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fDetail_tvEmail"
            android:text="nhan@gmail.com"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/fDetail_imgAvatarUser"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/fDetail_imgAvatarUser"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/fDetail_tvTitle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:text="title title title title title title title title title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/fDetail_tvAddress"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:text="130 Cộng Hòa, Phường 13, Quận TB, TP.HCM"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fDetail_tvDescription"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:text="description description description description description description description description description description description "
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/fDetail_lvContent"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:background="@drawable/border_tv"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/fDetail_etAddComment"
            android:hint="Add Comment"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/fDetail_btnPost"
            android:text="Post"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        android:id="@+id/fDetail_lvComment"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>