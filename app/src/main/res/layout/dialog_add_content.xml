<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dAddContent_tvTitle"
        android:text="Add Content"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/nabila"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/dAddContent_imgContent"
        android:layout_below="@+id/dAddContent_tvTitle"
        android:src="@drawable/add_image"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>
    <EditText
        android:id="@+id/dAddContent_etDescriptions"
        android:hint="Add Description..."
        android:layout_below="@+id/dAddContent_imgContent"
        android:layout_marginTop="3dp"
        android:paddingHorizontal="5dp"
        android:gravity="top"
        android:textSize="13sp"
        android:background="@drawable/border_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <LinearLayout
        android:layout_below="@+id/dAddContent_etDescriptions"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dAddContent_btnAdd"
            android:text="Add"
            app:cornerRadius="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dAddContent_btnClear"
            android:text="Clear"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dAddContent_btnCancel"
            android:text="Cancel"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>