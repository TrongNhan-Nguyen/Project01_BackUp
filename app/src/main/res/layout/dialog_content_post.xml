<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dContentPost_tvNothing"
        android:text="Nothing to show here"
        android:textColor="#090909"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dContentPost_tvDone"
        android:text="Done"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textColor="#090909"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/dContentPost_lvContent"
        android:dividerHeight="10dp"
        android:divider="@color/fui_transparent"
        android:layout_below="@+id/dContentPost_tvDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>