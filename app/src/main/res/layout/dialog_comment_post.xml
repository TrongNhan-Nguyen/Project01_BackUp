<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dCommentPost_tvNothing"
        android:text="Nothing to show here, add first comment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Comment"
        android:textSize="18sp"
        android:textColor="#090909"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dCommentPost_tvDone"
        android:text="Done"
        android:layout_alignParentRight="true"
        android:textColor="#090909"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/dCommentPost_layoutComment"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/dCommentPost_etComment"
            android:hint="Add your comment..."
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:textSize="13sp"
            android:gravity="top"
            android:background="@drawable/border_tv"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/dCommentPost_imgPost"
            android:src="@drawable/post"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/dCommentPost_lvComment"
        android:dividerHeight="10dp"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/dCommentPost_layoutComment"
        android:layout_below="@+id/dCommentPost_tvDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>