<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dAddFeedback_tvTitle"
        android:text="Send Feedback"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/nabila"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dAddFeedback_tvMessage"
        android:background="@drawable/border_tv"
        android:layout_below="@+id/dAddFeedback_tvTitle"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:text="@string/feedback"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dAddFeedback_etFeedback"
        android:layout_below="@+id/dAddFeedback_tvMessage"
        android:layout_toLeftOf="@+id/dAddFeedback_imgPost"
        android:layout_marginRight="5dp"
        android:hint="Add your feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/dAddFeedback_imgPost"
        android:src="@drawable/ic_send_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/dAddFeedback_etFeedback"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>