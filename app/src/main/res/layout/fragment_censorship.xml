<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_Censorship">

    <TextView
        android:id="@+id/fCensorship_tvTitle"
        android:text="Censorship"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nabila"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="3dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fCensorship_tvNothing"
        android:text="Nothing to show here"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fCensorship_tvNumber"
        android:text="0"
        android:layout_toRightOf="@+id/fCensorship_tvTitle"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#F80321"
        android:textAllCaps="true"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/fCensorship_lvPost"
        android:layout_below="@+id/fCensorship_tvTitle"
        android:layout_marginTop="3dp"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>