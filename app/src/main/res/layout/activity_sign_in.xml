<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInActivity">
   <TextView
       android:id="@+id/signIn_tvTitle"
       android:text="Sign in"
       android:fontFamily="@font/nabila"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:textSize="25sp"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/signIn_cvContainer"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/signIn_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Email:"
                android:fontFamily="@font/nabila"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/signIn_etEmail"
                android:hint="Enter Your Email"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Password:"
                android:paddingLeft="18dp"
                android:fontFamily="@font/nabila"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/signIn_etPass"
                android:hint="Enter Your Password"
                android:gravity="center"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/signIn_tvForgot"
                android:text="Forgot your password?"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/signIn_btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signIn_cvContainer"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_btn"
        android:text="Log in"/>
    <TextView
        android:id="@+id/signIn_tvOr"
        android:text="Or"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/signIn_btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/signIn_btnJustGo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signIn_tvOr"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_btn"
        android:text="Just Go"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="If this first time you sign in on this app, you'll need to click 'SIGN UP' or 'JUST GO'"
            android:textStyle="italic"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/signIn_tvSignUp"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>