<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <ImageView
        android:id="@+id/login_imgLogo"
        android:src="@drawable/logo1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <EditText
        android:id="@+id/login_etEmail"
        android:hint="Email"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/login_etPass"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_below="@+id/login_etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_etPass"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_btn"
        android:text="Log in"/>
    <TextView
        android:id="@+id/login_tvOr"
        android:text="Or"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btnJustGo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_tvOr"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_btn"
        android:text="Just Go"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="If you don't have an account"
            android:textStyle="italic"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_tvSignUp"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>